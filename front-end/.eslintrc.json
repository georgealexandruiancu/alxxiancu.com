{
	"env": {
		"browser": true,
		"es6": true,
		"node": true
	},
	"extends": [
		"plugin:react/recommended",
		"airbnb",
		"prettier"
	],
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"plugins": [
		"react"
	],
	"rules": {
		"react/jsx-indent": [
			2,
			"tab"
		],
		"quotes": [
			2,
			"double",
			{
				"avoidEscape": true
			}
		],
		"no-use-before-define": [
			"error",
			{
				"functions": false
			}
		],
		"func-names": ["error", "never"],
		"no-unused-vars": "warn"
	}
}